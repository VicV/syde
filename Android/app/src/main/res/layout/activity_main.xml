<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <dji.sdk.widget.DjiGLSurfaceView
        android:id="@+id/DjiSurfaceView_02"
        android:layout_width="fill_parent"
        android:layout_height="212dp"
        android:elevation="5dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#222">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <EditText
                android:id="@+id/editText"
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="#ebebeb"
                android:ems="10"
                android:inputType="number"
                android:layout_gravity="top|center|right" />

            <Button
                android:id="@+id/button_set_altitude"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="1dp"
                android:background="#ebebeb"
                android:text="Set Altitude"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_set_region"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dp"
                android:background="#ebebeb"
                android:text="Set Region"
                android:textSize="10sp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignEnd="@+id/home_layout" />

            <Button
                android:id="@+id/button_start_survey"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dp"
                android:background="#ebebeb"
                android:text="Start Survey"
                android:textSize="10sp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignEnd="@+id/home_layout" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/nav_layout"
            android:paddingTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout"
            android:layout_above="@+id/home_layout">

            <Button
                android:id="@+id/button_up"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_up_state" />

            <Button
                android:id="@+id/button_left"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button_up"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/button_up"
                android:background="@drawable/button_left_state" />

            <Button
                android:id="@+id/button_right"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/button_left"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/button_up"
                android:background="@drawable/button_right_state" />

            <Button
                android:id="@+id/button_down"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button_left"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_down_state" />

            <TextView
                android:id="@+id/button_stop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/button_up"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/x"
                android:gravity="center"
                android:text="STOP"
                android:textColor="#ebebeb"
                android:textSize="10sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button_set_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#ebebeb"
                android:elevation="5dp"
                android:padding="2dp"
                android:layout_marginRight="20dp"
                android:text="Set Home" />

            <ToggleButton
                android:id="@+id/button_switch_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#ebebeb"
                android:elevation="5dp"
                android:padding="7dp"
                android:layout_marginRight="20dp"
                android:text="Switch Mode"
                android:checked="false"
                android:textOn="Direct"
                android:textOff="GPS" />


            <Button
                android:id="@+id/button_go_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#ebebeb"
                android:elevation="5dp"
                android:padding="10dp"
                android:text="Go Home" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="#0F0F0F"
            android:visibility="invisible"
            android:id="@+id/infoLayout">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_column="1"
                        android:textColor="#FFFFFF"
                        android:text="GPS Location"
                        android:layout_gravity="left"></TextView>

                    <TextView
                        android:textColor="#FFFFFF"
                        android:text="0, 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currentLocation"
                        android:padding="3dip"
                        android:layout_marginLeft="50dp"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_column="1"
                        android:textColor="#FFFFFF"
                        android:text="Target Location"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:text="0, 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/targetLocation"
                        android:padding="3dip"
                        android:layout_marginLeft="50dp"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_column="1"
                        android:textColor="#FFFFFF"
                        android:text="Current Mode"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:text="GPS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currentMode"
                        android:padding="3dip"
                        android:layout_marginLeft="50dp"
                        android:layout_gravity="right" />
                </TableRow>

            </TableLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_below="@+id/linearLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="7pt"
                android:id="@+id/button_info"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
