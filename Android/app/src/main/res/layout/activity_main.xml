<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <dji.sdk.widget.DjiGLSurfaceView
        android:id="@+id/DjiSurfaceView_02"
        android:layout_width="fill_parent"
        android:layout_height="212dp"
        android:elevation="5dp" />

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/camera_texture" />-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#222">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <EditText
                android:id="@+id/editText"
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="#ebebeb"
                android:ems="10"
                android:inputType="number"
                android:layout_gravity="top|center|right" />

            <Button
                android:id="@+id/button_set_altitude"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="1dp"
                android:background="#ebebeb"
                android:text="Set Altitude"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_set_region"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dp"
                android:background="#ebebeb"
                android:text="Set Region"
                android:textSize="10sp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignEnd="@+id/home_layout" />

            <Button
                android:id="@+id/button_start_survey"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dp"
                android:background="#ebebeb"
                android:text="Start Survey"
                android:textSize="10sp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignEnd="@+id/home_layout" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/nav_layout"
            android:paddingTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout"
            android:layout_above="@+id/home_layout">

            <Button
                android:id="@+id/button_up"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_up_state" />

            <Button
                android:id="@+id/button_left"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button_up"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/button_up"
                android:background="@drawable/button_left_state" />

            <Button
                android:id="@+id/button_right"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/button_left"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/button_up"
                android:background="@drawable/button_right_state" />

            <Button
                android:id="@+id/button_down"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button_left"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_down_state" />

            <TextView
                android:id="@+id/button_stop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/button_up"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/x"
                android:gravity="center"
                android:text="STOP"
                android:textColor="#ebebeb"
                android:textSize="10sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button_set_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#ebebeb"
                android:elevation="5dp"
                android:padding="2dp"
                android:layout_marginRight="20dp"
                android:text="Set Home" />

            <ToggleButton
                android:id="@+id/button_switch_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#ebebeb"
                android:elevation="5dp"
                android:padding="7dp"
                android:layout_marginRight="20dp"
                android:text="Switch Mode"
                android:checked="false"
                android:textOn="Direct"
                android:textOff="GPS" />


            <Button
                android:id="@+id/button_go_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#ebebeb"
                android:elevation="5dp"
                android:padding="10dp"
                android:text="Go Home" />


        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_alignLeft="@+id/linearLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="7pt"
                android:id="@+id/button_info"
                android:layout_alignParentEnd="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PID Demo"
                android:id="@+id/button_pid"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:layout_below="@+id/button_pid"
                android:layout_alignLeft="@+id/button_pid"
                android:id="@+id/pid_angle"
                android:textSize="14pt">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_alignLeft="@+id/button_pid"
                android:id="@+id/pid_error"
                android:textSize="14pt"
                android:layout_below="@+id/pid_angle">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/infoLayout"
            android:background="#000"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:visibility="invisible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="1"
                    android:textColor="#FFFFFF"
                    android:text="GPS Location"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:textColor="#FFFFFF"
                    android:text="0, 0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentLocation"
                    android:padding="3dip"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="1"
                    android:textColor="#FFFFFF"
                    android:text="Target Location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:textColor="#FFFFFF"
                    android:text="0, 0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/targetLocation"
                    android:padding="3dip"
                    android:layout_gravity="right"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textAlignment="gravity" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="1"
                    android:textColor="#FFFFFF"
                    android:text="Current Mode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <TextView
                    android:textColor="#FFFFFF"
                    android:text="GPS"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentMode"
                    android:padding="3dip"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="bottom|right"
                    android:layout_column="2"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="1"
                    android:textColor="#FFFFFF"
                    android:text="Connected"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <TextView
                    android:textColor="#FFFFFF"
                    android:text="Nope"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/droneConnected"
                    android:padding="3dip"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="bottom|right"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="1"
                    android:textColor="#FFFFFF"
                    android:text="Message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <TextView
                    android:textColor="#FFFFFF"
                    android:text="Nope"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/message"
                    android:padding="3dip"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="bottom|right"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special 1"
                android:id="@+id/button_special1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special 2"
                android:id="@+id/button_special2" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
