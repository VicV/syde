<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#222"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPS Location"

                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/currentLocation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="1dip"

                        android:text="0, 0"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Target Location"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/targetLocation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:padding="1dip"
                        android:text="0, 0"
                        android:textAlignment="gravity"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:text="Current Mode"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/currentMode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="0dp"
                        android:layout_weight="1"
                        android:padding="1dip"
                        android:text="GPS"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:text="Connected"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/droneConnected"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="0dp"
                        android:layout_weight="1"
                        android:padding="1dip"
                        android:text="Nope"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:text="Message"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:padding="1dip"
                        android:text="Nope"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_special1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:fontFeatureSettings="smcp"
                    android:text="special 1"
                    android:textColor="#999" />

                <Button
                    android:id="@+id/button_special2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFeatureSettings="smcp"
                    android:text="special 2"

                    android:textColor="#999" />

                <Button
                    android:id="@+id/button_special3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFeatureSettings="smcp"
                    android:text="special 3"

                    android:textColor="#999" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/CVPreview"
            android:layout_width="fill_parent"
            android:layout_height="212dp"
            android:alpha="128"
            android:elevation="5dp"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>