<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">

        <item name="android:elevation">5dp</item>
        <item name="tabIndicatorColor">#ff4081</item>
        <item name="android:textSize">3sp</item>
        <item name="tabSelectedTextColor">#ff4081</item>
        <item name="tabTextColor">#8b8b8b</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:textColor">#8b8b8b</item>
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>

    </style>
    <style name="MyEditText">
        <item name="android:textColor">#8b8b8b</item>
        <item name="colorControlNormal">#8b8b8b</item>
        <item name="android:colorAccent">#8b8b8b</item>
        <item name="colorControlActivated">#8b8b8b</item>
        <item name="colorControlHighlight">#8b8b8b</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MyText">
        <item name="android:textColor">#8b8b8b</item>
        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <style name="MyText.Status">
        <item name="android:gravity">right</item>
    </style>

    <style name="MyText.Icon">
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="StatusImage">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StatusRow">
        <item name="android:padding">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
